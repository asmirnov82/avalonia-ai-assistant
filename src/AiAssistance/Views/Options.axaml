<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             xmlns:vm="clr-namespace:AIAssistant.ViewModels"
             x:Class="AIAssistant.Views.Options"
             x:DataType="vm:OptionsViewModel">
    <StackPanel Orientation="Vertical">
        <DockPanel>
            <Label>Temperature</Label>
            <TextBlock
                Text="{Binding ElementName=SliderGpuCount, Path=Value, StringFormat={}{0:N2}}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                FontSize="11"/>
        </DockPanel>
        <Slider Margin="0,-10,0,0"
                Name="SliderGpuCount"
                Value="{Binding Temperature}"
                Minimum="0.1"
                Maximum="5.0"
                TickFrequency="0.05"
                IsSnapToTickEnabled="true"/>
        <Label>System Instructions</Label>
        <TextBox Margin="5"
                 TextWrapping="Wrap"
                 Text="{Binding SystemInstructions}"/>
    </StackPanel>
</UserControl>
